<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/pumpmin"
        android:hint="Min range of pump"
        android:textColor="#000000"/>

    <EditText
        android:layout_below="@+id/pumpmin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/pumpmax"
        android:hint="Max range of pump"
        android:textColor="#000000"/>


    <EditText
        android:layout_below="@+id/pumpmax"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/powermin"
        android:hint="Min power"
        android:textColor="#000000"/>


    <EditText
        android:layout_below="@+id/powermin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/powermax"
        android:hint="Max power"
        android:textColor="#000000"/>


    <EditText
        android:layout_below="@+id/powermax"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/powermidone"
        android:hint="Mid1 power"
        android:textColor="#000000"/>


    <EditText
        android:layout_below="@+id/powermidone"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/powermidtwo"
        android:hint="Mid2 power"
        android:textColor="#000000"/>

        <Button
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"/>

    </RelativeLayout>

</LinearLayout>