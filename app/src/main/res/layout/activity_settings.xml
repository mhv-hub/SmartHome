<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragementColor">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/settingslogo"/>

        <Button
            android:id="@+id/settingsbutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rename Buttons"
            android:textSize="25dp"
            android:background="@drawable/setbut"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/settingsbutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/setbut"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/settingsbutton1"/>

        <Button
            android:id="@+id/settingsbutton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/setbut"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/settingsbutton2" />

        <Button
            android:id="@+id/settingsbutton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/setbut"
            android:layout_below="@+id/settingsbutton3"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>